#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define ALPHABET_SIZE 26
#define MAX_KEYWORD_LENGTH 26
#define MAX_PLAINTEXT_LENGTH 1024

void generate_cipher_sequence(char *keyword, char *cipher_sequence) {
    int i, j, k = 0;
    char alphabet[ALPHABET_SIZE];

    // Create the alphabet array
    for (i = 0; i < ALPHABET_SIZE; i++) {
        alphabet[i] = 'a' + i;
    }

    // Generate the cipher sequence
    for (i = 0; i < strlen(keyword); i++) {
        for (j = 0; j < ALPHABET_SIZE; j++) {
            if (tolower(keyword[i]) == alphabet[j]) {
                cipher_sequence[k++] = alphabet[j];
                alphabet[j] = '-';
                break;
            }
        }
    }

    // Fill in the remaining characters
    for (i = 0; i < ALPHABET_SIZE; i++) {
        if (alphabet[i] != '-') {
            cipher_sequence[k++] = alphabet[i];
        }
    }

    cipher_sequence[k] = '\0';
}

void encrypt(char *plaintext, char *cipher_sequence, char *ciphertext) {
    int i, j;

    for (i = 0; i < strlen(plaintext); i++) {
        for (j = 0; j < ALPHABET_SIZE; j++) {
            if (tolower(plaintext[i]) == 'a' + j) {
                if (isupper(plaintext[i])) {
                    ciphertext[i] = toupper(cipher_sequence[j]);
                } else {
                    ciphertext[i] = cipher_sequence[j];
                }
                break;
            }
        }
    }

    ciphertext[i] = '\0';
}

void decrypt(char *ciphertext, char *cipher_sequence, char *plaintext) {
    int i, j;

    for (i = 0; i < strlen(ciphertext); i++) {
        for (j = 0; j < ALPHABET_SIZE; j++) {
            if (tolower(ciphertext[i]) == cipher_sequence[j]) {
                if (isupper(ciphertext[i])) {
                    plaintext[i] = toupper('a' + j);
                } else {
                    plaintext[i] = 'a' + j;
                }
                break;
            }
        }
    }

    plaintext[i] = '\0';
}

int main() {
    char keyword[MAX_KEYWORD_LENGTH];
    char cipher_sequence[ALPHABET_SIZE + 1];
    char plaintext[MAX_PLAINTEXT_LENGTH];
    char ciphertext[MAX_PLAINTEXT_LENGTH];

    printf("Enter the keyword: ");
    scanf("%s", keyword);

    generate_cipher_sequence(keyword, cipher_sequence);
    printf("Cipher sequence: %s\n", cipher_sequence);

    printf("Enter the plaintext: ");
    scanf("%s", plaintext);

    encrypt(plaintext, cipher_sequence, ciphertext);
    printf("Ciphertext: %s\n", ciphertext);

    decrypt(ciphertext, cipher_sequence, plaintext);
    printf("Plaintext: %s\n", plaintext);

    return 0;
}
